extends layout

block content
  div.post
    div.post-header
      h1
        a(href=post.url)
          = post.title
      span.date-label PUBLISHED:
      span.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
    div.post.content.post-content
      != post.content
    div.tags 
      span.tags-label TAGS:
      each tag in post.tags
        a(href=tagUrl(tag))
          span.label.label-info #{tag}
